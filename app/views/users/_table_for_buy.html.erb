<div class="card shadow-none">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Ref no.</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Date of purchase</th>
        <th scope="col">Details</th>
      </tr>
    </thead>
<!-- body of the table -->
    <% transactions.each do |transaction| %>
      <tbody>

          <tr>

            <th scope="row">
              <%= link_to item_path(transaction.id) do %>
                <%= transaction.item_id %>
              <% end %>
            </th>
            <td><%= transaction.item.user.first_name %>
                <%= transaction.item.user.last_name %></td>
            <td><%= transaction.item.description %></td>
            <td><%= transaction.item.price %> euros</td>
            <td><%= transaction.item.updated_at.strftime("%Y-%m-%d") %></td>
            <td>
              <%= link_to item_path(transaction.item) do %>
                <p><i class="fas fa-glasses text-muted"></i></p>
              <% end %>
            </td>
          </tr>
      </tbody>
    <% end %>
  </table>
</div>
