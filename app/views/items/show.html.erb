<div class="container">
  <div class="row">
    <!-- title + image -->
    <div class="col-sm-12 col-md-12 col-lg-6 text-capitalize m-3">
      <h1>
        <%= @item.title %>
      </h1>
    </div>

    <!-- item info -->
    <div class="card m-3" style="col-sm-12 col-md-6 col-lg-3">
      <div class="card-header text-capitalize">
        <p><%= @item.title %></p>
      </div>

      <div class="list-group list-group-flush">
        <div class="list-group-item d-flex justify-content-between align-middle">
          <p class="font-weight-bold">Category</p>
          <p><%= @item.category %></p>
        </div>
        <div class="list-group-item d-flex justify-content-between align-middle">
          <p class="font-weight-bold">Location</p>
          <p><%= @item.location %></p>
        </div>
        <div class="list-group-item d-flex justify-content-between align-middle">
          <p class="font-weight-bold">Price</p>
          <p><%= @item.price %> €</p>
        </div>
      </div>

      <div class="card-body">
        <%= link_to 'Request', '/', class: "btn btn-success btn-sm p-2"%>
        <%= link_to 'See Location', '/', class: "btn btn-success btn-sm p-2"%>
      </div>
    </div>

    <!-- seller info -->
    <div class="card m-3" style="col-sm-12 col-md-6 col-lg-3">
      <div class="card-header text-capitalize">
      </div>

      <div class="list-group list-group-flush">
        <div class="list-group-item d-flex justify-content-between align-middle">
        </div>
        <div class="list-group-item d-flex justify-content-between align-middle">
          <p><i class="fas fa-user text-muted pr-2"></i><%= @item.user.first_name %> <%= @item.user.last_name %></p>
        </div>
        <div class="list-group-item d-flex justify-content-between align-middle">
          <p><i class="fas fa-map-marker-alt text-muted pr-2"></i>from <%= @item.location %></p>
        </div>
      </div>

      <div class="card-body align-middle">
        <%= link_to 'Contact seller', '/', class: "btn btn-success btn-sm btn-block p-2 "%>
      </div>
    </div>
  </div>
  <!-- smaller pics item -->
  <div class="row">
    <div class="col-12">
    </div>
  </div>
</div>

